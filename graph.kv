<MainScreen>
    BoxLayout:
        orientation: "vertical"
        adaptive_size: True

        GridLayout:
            rows: 2

            GridLayout:
                cols:5

                Label:
                    background_normal:''
                    background_color: (0,102/255,204/255)
                    canvas.before:
                        Color:
                            rgb: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    id: graph_name
                    text:'Graph name'
                Button:
                    text: 'add graph'
                    on_press: root.add_graph(root.return_change_g_name())
                Button:
                    text: 'switch graph'
                    on_press: root.change_graph(root.return_change_g_name())
                Button:
                    text: 'delete graph'
                    on_press: root.delete_graph(root.return_change_g_name())
                TextInput:
                    hint_text:  'graph name'
                    on_text: root.change_g_name(self.text)

            GridLayout:
                cols: 2
                Button:
                    text: 'dekart multiplication'
                    on_press: root.dekart_mutiplication(root.return_change_g_name())

                Button:
                    text: 'vektor multiplication'
                    on_press: root.vektor_mutiplication(root.return_change_g_name())

        GridLayout:
            cols: 5

            GridLayout:
                rows: 6
                Button:
                    text: 'add vertex'
                    on_press: root.add_v(str(root.return_v_name()))
                Button:
                    text: 'rename vertex'
                    on_press: root.set_new_v_name(root.return_v_name(), root.return_new_v_name())
                Button:
                    text: 'add vertex text'
                    on_press: root.set_v_text(root.return_v_name(), root.return_v_text())
                Button:
                    text: 'add vertex color'
                    on_press: root.set_v_color(root.return_v_name(),root.return_v_color())
                Button:
                    text: 'delete vertex'
                    on_press: root.remove_v(str(root.return_v_name()))
                Button:
                    text: 'vertex info'
                    on_press: root.print_v_info(root.return_v_name())


            GridLayout:
                rows:4
                TextInput:
                    hint_text: 'vertex name'
                    on_text: root.v_name(self.text)
                TextInput:
                    hint_text: 'new vertex name'
                    on_text: root.new_v_name(self.text)
                TextInput:
                    hint_text: 'vertex color'
                    on_text: root.v_color(self.text)
                TextInput:
                    hint_text: 'vertex text'
                    on_text: root.v_text(self.text)


            GridLayout:
                rows: 4
                Button:
                    text: 'add oriented edge'
                    on_press: root.add_e_oriented(root.return_e_v_name1(), root.return_e_v_name2(), root.return_e_name())
                Button:
                    text: 'add not oriented edge'
                    on_press: root.add_e_not_oriented(root.return_e_v_name1(), root.return_e_v_name2(), root.return_e_name())
                Button:
                    text: 'add edge color'
                    on_press: root.set_e_color(root.return_e_name(), root.return_e_color())
                Button:
                    text: 'delete edge'
                    on_press: root.remove_e(root.return_e_name())

            GridLayout:
                rows:2
                GridLayout:
                    rows:1
                    cols:2

                    TextInput:
                        hint_text: 'v1 name'
                        on_text: root.e_v_name1(self.text)

                    TextInput:
                        hint_text: 'v2 name'
                        on_text: root.e_v_name2(self.text)
                GridLayout:
                    cols:2
                    TextInput:
                        hint_text: 'edge name'
                        on_text: root.e_name(self.text)
                    TextInput:
                        hint_text: 'edge color'
                        on_text: root.e_color(self.text)


        GridLayout:
            cols: 2
            GridLayout:
                rows:5
                GridLayout:
                    cols:2
                    Button:
                        text: 'print graph information'
                        on_press: root.print_graph_info()

                    Button:
                        text: 'print hamilton cycles'
                        on_press: root.print_hamilton_cycles()
                Button:
                    text: 'show multiple edges'
                    on_press: root.show_multi_e()
                Button:
                    text: 'make graph connected'
                    on_press: root.make_connected()
                GridLayout:
                    cols:2

                    Button:
                        text: 'vertexes info'
                        on_press: root.print_v_info('')
                    Button:
                        text: 'edges info'
                        on_press: root.print_e_info()

                Button:
                    text: 'center, radius, diametr'
                    on_press: root.find_c_r_d()

            Label:
                id: matrix
                background_normal:''
                background_color: (0,102/255,204/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                text: 'Graph information'


